  "smoke": "tsx scripts/smoke.ts",
  "smoke:js": "node dist/scripts/smoke.js"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
