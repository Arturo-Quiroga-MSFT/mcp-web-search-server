{
  "name": "web-mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "An MCP server that provides a web.search tool backed by SerpAPI.",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
